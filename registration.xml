<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1"
    tools:context=".RegistrationActivity">

    <EditText
        android:id="@+id/textPersonName"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_below="@id/textViewName"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_textfield"
        android:ems="10"
        android:inputType="textPersonName" />

        <EditText
        android:id="@+id/textPersonSurname"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_below="@id/textViewSurname"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edit_textfield" />

        <EditText
        android:id="@+id/textEmail"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:background="@drawable/edit_textfield"
        android:ems="10"
        android:layout_below="@id/textViewEmail"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>

        <EditText
        android:id="@+id/textPhone"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_textfield"
        android:layout_below="@id/textViewPhone"
        android:ems="10"
        android:inputType="phone" />

        <EditText
        android:id="@+id/textProvince"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_below="@id/textViewProvince"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edit_textfield" />

        <EditText
        android:id="@+id/textCity"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_below="@id/textViewCity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edit_textfield" />


        <EditText
        android:id="@+id/textPassword"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewPassword"
        android:background="@drawable/edit_textfield"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />

        <EditText
        android:id="@+id/textConfirmPassword"
        android:layout_width="305dp"
        android:layout_height="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewConfirmPassword"
        android:background="@drawable/edit_textfield"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />
        
        <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPersonName"
        android:text="Surname"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/textPersonSurname"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:layout_below="@id/textEmail"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewProvince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Province"
        android:layout_below="@id/textPhone"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:layout_below="@id/textProvince"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/textCity"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>

        <TextView
        android:id="@+id/textViewConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:layout_below="@id/textPassword"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"/>
        
        <Button
        android:id="@+id/registrationButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="@color/black"
            android:textColor="@color/white"
        android:text="Register"/>

    </RelativeLayout>


